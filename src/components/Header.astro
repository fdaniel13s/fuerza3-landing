---
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---
<header class="w-full bg-white sticky top-0 z-sticky border-b" role="banner">
  <div class="container mx-auto flex items-center justify-between py-3 px-6">
    <a href={base} class="flex items-center gap-3" aria-label="Inicio - Guante #3">
      <img
        src={`${base}images/logo_juntos_por_el_peru.png`}
        alt="Logo Juntos por el Perú"
        class="h-10 w-auto"
      />
      <div class="leading-tight">
        <div class="text-lg font-semibold text-[var(--neutral-800)]">Lila Viza</div>
        <div class="text-xs text-[var(--green-700)]">Diputada por Tacna</div>
      </div>
    </a>

    <nav class="hidden md:flex gap-6 items-center" role="navigation" aria-label="Principal">
      <a href="#propuestas" class="btn btn-primary focus-ring">Propuestas para nuestra Tacna</a>
    </nav>

    <button class="md:hidden p-2 rounded focus-ring" aria-label="Abrir menú">☰</button>
  </div>
</header>
