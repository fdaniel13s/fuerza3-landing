---
// Import theme and global CSS so Astro/Vite/Tailwind can process them
import '../styles/theme.css';
import '../styles/global.css';

const { title = 'Fuerza #3 - Tacna', description = 'Fuerza que Construye, Tacna que Avanza.' } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const imagePath = `${base}images/perfil_lila_viza.jpg`;
const faviconPath = `${imagePath}?v=2`;
const ogImage = new URL(imagePath, Astro.site ?? Astro.url).toString();
---
<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/jpeg" href={faviconPath} />
    <link rel="shortcut icon" type="image/jpeg" href={faviconPath} />
    <link rel="apple-touch-icon" href={imagePath} />
    <meta name="theme-color" content="#1EAA3E" />
    <meta property="og:site_name" content="Guante #3 - Tacna" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <title>{title}</title>
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="canonical" href={Astro.url.href} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <slot />
  </body>
</html>
